<h1>Questions</h1>
<%= link_to 'New' , new_question_path %>
<table>
<tr>
  <th>ID</th>
  <th>Title</th>
  <th>Name</th>
  <th>Content</th>
  <th></th>
</tr>
<% @questions.each do |question| %>
<tr>
  <th><%= question.id %></th>
  <th><%= question.title %></th>
  <th><%= question.name %></th>
  <th><%= question.content %></th>
  <th><%= link_to 'Show', question_path(question) %></th>
  <th><%= link_to 'Edit', edit_question_path(question) %></th>
  <th><%= link_to 'Destroy', question_path(question), data: {
    turbo_method: :Delete,
    turbo_confirm: 'Are you sure?'
  } %></th>
</tr>
<% end %>
</table>